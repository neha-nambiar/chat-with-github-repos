{
    "manifest_version": 3,
    "name": "GitHub Repo Chat",
    "version": "1.0",
    "description": "Chat with GitHub repositories using AI",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://*.vercel.app/*",
      "*://github.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }